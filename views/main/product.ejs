<% layout('app') -%>

<main class="products">
	<div class="product" id="product-<%= product._id %>">
		<a href="products/<%= product.slug %>" title="<%= product.name %>">
			<img class="product-image" src="<%= product.image %>" alt="<%= product.name %>">
		</a>
		<div class="product-meta">
			<p class="product-name">
				<a href="products/<%= product.slug %>" title="<%= product.name %>">
					<strong><%= product.name %></strong>
				</a>
			</p>
			<p class="product-category">
				<strong>Category: </strong>
				<a href="/categories/<%= product.category.slug %>"><%= product.category.name %></a>
			</p>
			<p class="product-price">
				<strong>Price: </strong>
				<span>$ <%= product.price %></span>
			</p>
			<hr />
			<div class="row">
				<div class="col-xs-6">
					<div>
						<form action="/wishlist/<%= product._id %>" class="form-inline" method="POST">
							<button class="btn btn-default" type="submit"><i class="fa fa-heart"></i> Add to Wishlist</button>
						</form>
					</div>
				</div>
				<div class="col-xs-6">
					<div class="text-right">
						<form action="/cart/<%= product._id %>" class="form-inline" method="POST">
							<button class="btn btn-primary" type="submit"><i class="fa fa-shopping-bag"></i> Add to Bag</button>
						</form>		
					</div>
				</div>
			</div>
		</div>
	</div>
</main>